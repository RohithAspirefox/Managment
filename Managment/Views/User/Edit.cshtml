@model Management.Common.Models.ProfileEdit;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_accountLayout";
}





<link href="~/css/signup.css" rel="stylesheet" />

<div class="container">
    <div class="card_user_input">
        <div class="card_title">
            <div class="btn btn-success">Please Fill your deatils </div>
        </div>
        <div class="form">
            <form enctype="multipart/form-data" asp-action="EditProfile" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" type="text" name="FirstName" id="FirstName" placeholder="FirstName" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>

               <div>
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" type="text" name="LastName" placeholder="LastName" id="LastName" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
               </div>

                <div>
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" type="email" name="Email" placeholder="" id="Email" readonly/>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div>
                <label asp-for="@Model.Address"></label>
                <input asp-for="@Model.Address" type="text" name="Address" placeholder="" id="Address" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>

                <div>
                <label asp-for="@Model.Mobile"></label>
                <input asp-for="@Model.Mobile" type="text" name="Mobile" id="Mobile" placeholder="PhoneNumber" />
                <span asp-validation-for="@Model.Mobile" class="text-danger"></span>
                </div>
         

                <div
                    <label asp-for="@Model.ProfileImage" class="control-label"></label>
                    <img src="~/images/@ViewBag.Image" class="rounded-circle" height="60" width="80" asp-append-version="true" />

                    <input asp-for="@Model.ProfileImage" class="custom-file-input" id="ProfileImage" name="ProfileImage">
                </div>
           

                <button type="submit">Submit</button>


            </form>
        </div>

    </div>
</div>









@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }

}