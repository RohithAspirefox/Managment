@model Management.Common.Models.DTO.LoginModelDto

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<link href="~/css/newlogin.css" rel="stylesheet" />

@{
    Layout = "_accountLayout";
}
<div class="login-container">
    <form class="login-form" asp-action="Login" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <h1>Welcome Back</h1>
        <p>Please login to your account</p>
        <div class="input-group">
            <input asp-for="Email" placeholder="Email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="input-group">
            <input asp-for="Password" type="password" id="password" name="password" placeholder="Password" required>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit">Login</button>
        <div class="bottom-text">
            <p>Don't have an account? <a asp-action="Signup">Sign Up</a></p>
            <p><a href="/Account/ForgotPassword">Forgot password?</a></p>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
