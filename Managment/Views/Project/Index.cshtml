@model Management.Common.Models.DTO.ProjectDto

<div class="container-fluid">
    <div>
        @if (Model != null)
        {
            <div class="row mb-4">

                <!-- 1st Row -->
                <div class="col-md-4 mt-2 px-5">
                    <img src="@Model.LogoUrl" class="card-img img-fluid" alt="Project Logo">
                </div>
                <div class="col-md-4 mt-2">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <p class="card-text">@Model.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</li>
                            <li class="list-group-item"><strong>Status:</strong> @Model.Status</li>
                            <li class="list-group-item"><strong>Development Name:</strong> @Model.DevelopmentName</li>
                            <li class="list-group-item"><strong>Development URL:</strong> @Model.DevelopmentUrl</li>
                            <li class="list-group-item"><strong>Stage Name:</strong> @Model.StageName</li>
                            <li class="list-group-item"><strong>Stage URL:</strong> @Model.StageUrl</li>
                            <li class="list-group-item"><strong>Production Name:</strong> @Model.ProductionName</li>
                            <li class="list-group-item"><strong>Production URL:</strong> @Model.ProductionUrl</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 mt-2 px-5">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                <strong>Documentation:</strong>
                                <a href="@Model.DocumentationUrl" target="_blank">
                                    <img src="@Model.DocumentationUrl" class="img-thumbnail custom-snapshot-img" alt="Documentation">
                                </a>
                            </li>
                            <li class="list-group-item">
                                <strong>Snapshots:</strong>
                                <br />
                                @foreach (var snapshot in Model.SnapShootsUrl)
                                {
                                    <img src="@snapshot" class="img-thumbnail custom-snapshot-img" alt="Snapshot">
                                }
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- 2nd Row -->
                <div class="col-md-6 mt-2 px-5">
                    <div class="card-body">
                        <li class="list-group-item">
                            <strong>Tech Stack Used:</strong>
                            @foreach (var techStack in Model?.TechStackUsed)
                            {
                                <button class="button-2" role="button">
                                    @techStack
                                    @* <i class="fa-solid fa-xmark"></i> *@
                                </button>
                            }
                        </li>
                    </div>
                </div>
                @* <div class="col-md-6 mt-2">
            <div class="card-body">
            <li class="list-group-item">
            <strong>Tech Stack Used:</strong>
            @foreach (var techStack in Model.TechStackUsed)
            {
            <p>@techStack</p>
            }
            </li>
            </div>
            </div> *@
                <div class="col-md-6 mt-2 px-5">
                    <div class="card-body">
                        <li class="list-group-item">
                            <div><strong>Developers:</strong> <span>@String.Join(",", Model.Developers)</span> </div>
                        </li>
                    </div>
                </div>

                <!-- 3rd Row -->
                <div class="col-md-12 mt-2">
                    <div class="card-footer">
                        <div class="btn-group">
                            <a href="@Url.Action("Update", "Project", new { id = Model.ProjectId })" class="btn btn-light">
                                <i class="fa-solid fa-pencil"></i> Edit
                            </a>
                            <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <i class="fa-solid fa-trash"></i> Delete
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete this project?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <a href="@Url.Action("Delete", "Project", new { id = Model.ProjectId })" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
        else
        {
            <div class="col-12">
                <p>No projects found.</p>
            </div>
        }
    </div>
</div>


