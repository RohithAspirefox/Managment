<h3>List of All The Projects Below</h3>

<form asp-action="Search" method="get">
    <div style="display:flex">
        <h3><label for="searchInput">Search by Name:</label></h3>
        <input style="width: 335px;margin-top: 15px;" class="form-control" type="text" id="searchInput" name="value" />
        <button style="margin-left: 20px;height: 37px;margin-top:11px;" class="btn btn-primary" type="submit" id="searchButton">
            Search
        </button>
    </div>
</form>

