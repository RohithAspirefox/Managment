@model Management.Common.Models.DTO.PaginatedList<Management.Common.Models.DTO.ProjectDto>

<a asp-action="Add" asp-controller="Project" class="btn btn-primary">Add Project</a>
<br />
<br />

<table class="table" style="border-collapse: separate;border-spacing: 14px 8px;border: 2px solid #ccc;">
    <thead>
        <tr>
            <th>Logo</th>
            <th>
                <span>Name</span>
                <a asp-action="ListView" asp-route-sortField="Name" asp-route-sortOrder="asc">▲</a>
                <a asp-action="ListView" asp-route-sortField="Name" asp-route-sortOrder="desc">▼</a>
            </th>
            <th>
                <span>StartDate</span>
                <a asp-action="ListView" asp-route-sortField="StartDate" asp-route-sortOrder="asc">▲</a>
                <a asp-action="ListView" asp-route-sortField="StartDate" asp-route-sortOrder="desc">▼</a>
            </th>
            <th>
                <span>Status</span>
                <a asp-action="ListView" asp-route-sortField="Status" asp-route-sortOrder="asc">▲</a>
                <a asp-action="ListView" asp-route-sortField="Status" asp-route-sortOrder="desc">▼</a>
            </th>
            <th>Action</th>
    </thead>
    <tbody>
        @if (Model.Items.Any())
        {
            @foreach (var project in Model.Items)
            {
                <tr style="border-block: none;border-bottom: white;">
                    <td><img src="@project.LogoUrl" width="100" height="100"></td>
                    <td>@project.Name</td>
                    <td>@project.StartDate.ToShortDateString()</td>
                    <td>@project.Status</td>
                    
                    <td>
                        <a style="margin-right: 6px" class="btn btn-primary" href="@Url.Action("Index", "Project", new { id = project.ProjectId })">
                            Detail View</a>
                    </td> 
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="13">No projects found.</td>
            </tr>
        }

    </tbody>
</table>

<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= (Model.TotalCount + Model.PageSize - 1) / Model.PageSize; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, sortField = ViewBag.SortField, sortOrder = ViewBag.SortOrder })">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>